@using EntityLayer.Concrete
@model List<Product>
@{
	Layout = "~/Views/Shared/_UILayout.cshtml";
}

<table class="table table bordered">
	<tr>
		<th>#</th>
		<th>Ürün Adı</th>
		<th>Fiyat</th>
		<th>Stok</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach(var item in Model)
	{
		<tr>
			<td>@item.Id</td>
			<td>@item.Name</td>
			<td>@item.Price</td>
			<td>@item.Stock</td>
			<td><a href="/Product/DeleteProduct/@item.Id" class="btn btn-danger text-color:white">Sil</a></td>
			<td><a href="/Product/UpdateProduct/@item.Id" class="btn btn-primary text-color:white">Güncelle</a></td>

		</tr>
	}
</table>
