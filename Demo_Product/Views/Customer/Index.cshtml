@using EntityLayer.Concrete;
@model List<Customer>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Müşteriler</h1>

<table class="table table bordered">
	<tr>
		<th>#</th>
		<th>Müşteri Adı</th>
		<th>Şehir</th>		
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Id</td>
			<td>@item.Name</td>
			<td>@item.City</td>

			<td><a href="/Customer/DeleteCustomer/@item.Id" class="btn btn-outline-danger text-color:white">Sil</a></td>
			<td><a href="/Customer/UpdateCustomer/@item.Id" class="btn btn-outline-primary text-color:white">Güncelle</a></td>

		</tr>
	}
</table>
<a href="/Customer/AddCustomer" class="btn btn-outline-success"> Müşteri ekle</a>