@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<table class="table table bordered">
	<tr>
		<th>#</th>
		<th>Kategori Adı</th>
		<th>Güncelle</th>
		<th>Detaylar</th>

		
	</tr>
	@foreach (var item in Model)
	{
			<tr>
				<td>@item.CategoryId</td>
				<td>@item.CategoryName</td>


			<td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger text-color:white">Sil</a></td>
			<td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-primary text-color:white">Güncelle</a></td>
			<td><a href="/Category/DetailsCategory/@item.CategoryId" class="btn btn-outline-primary text-color:white">Güncelle</a></td>

			</tr>
	}
</table>

