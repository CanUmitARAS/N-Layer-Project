@using EntityLayer.Concrete
@model List<Job>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<table class="table table bordered">
	<tr>
		<th>#</th>
		<th>Meslek Adı</th>
		
		<th>Güncelle</th>
		<th>Detaylar</th>
	</tr>
	@foreach(var item in Model)
	{
		<tr>
			<td>@item.JobId</td>
			<td>@item.Name</td>

		
			<td><a href="/Job/DeleteJob/@item.JobId" class="btn btn-danger text-color:white">Sil</a></td>
			<td><a href="/Job/UpdateJob/@item.JobId" class="btn btn-primary text-color:white">Güncelle</a></td>
			<td><a href="/Job/DetailsJob/@item.JobId" class="btn btn-outline-primary text-color:white">Güncelle</a></td>

		</tr>
	}
</table>


